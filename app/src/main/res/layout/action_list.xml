<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout android:id="@+id/actions_section"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:paddingBottom="0dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/detected_actions"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:name="com.hover.tester.ActionListFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_padding"
            android:layout_marginEnd="@dimen/standard_padding"
            app:layoutManager="LinearLayoutManager"
            tools:context="com.hover.tester.list.ActionListFragment"
            tools:listitem="@layout/action_li"
            tools:layout_height="200dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/standard_padding"
            android:layout_marginTop="@dimen/standard_padding"
            android:background="@color/lightGray" />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_padding"
        android:orientation="horizontal">

        <Button android:id="@+id/add_integration_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_integration"
            android:onClick="pickIntegration"/>

    </LinearLayout>


</LinearLayout>